pipeline {

   environment {
        registry = "manish8607/cogknit"
        registryCredential = "docker-creds"
        dockerImage = ""
   }

   agent any

   stages {
       
      stage('Cloning Git') {
         steps {
            git branch: 'feature', url: 'https://github.com/manish535/deploy-container-ecs.git'
         }
      }
      stage('Building Image') {
          steps {
              script {
                 docker.build registry + ":$BUILD_NUMBER"
                }
          }
      }
   }
}
